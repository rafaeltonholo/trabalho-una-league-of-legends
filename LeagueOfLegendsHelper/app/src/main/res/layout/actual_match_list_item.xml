<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/AppTheme.ListItem"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="2dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imgCampeaoIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/txtCampeaoNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campeao"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"/>

        <TextView
            android:id="@+id/txtCampeaoQtdeJogos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="270 jogos"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/txtInvocadorNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Nome do Invocador"
            android:textAppearance="?android:attr/textAppearanceLargeInverse"/>

        <TextView
            android:id="@+id/txtInvocadorElo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Elo Jogador"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtInvocadorKillRatio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="KDA 8/6.1/5.4"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="Maestrias"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtInvocadorMaestria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="21/9/0"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="Runas"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"/>

        <TextView
            android:id="@+id/txtInvocadorRunas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="xxx de ataque mÃ¡gico\nyyyy de defesa\nzz% de ouro por segundo"
            android:textAppearance="?android:attr/textAppearanceSmallInverse"/>


    </LinearLayout>

    <!--LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout-->
</LinearLayout>